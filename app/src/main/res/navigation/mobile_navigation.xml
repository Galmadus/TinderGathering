<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_swipe">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tindergathering.ui.home.HomeFragment"
        android:label="@string/title_app"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.tindergathering.ui.profile.ProfileFragment"
        android:label="@string/title_app"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_matchs"
        android:name="com.example.tindergathering.ui.matchs.MatchsFragment"
        android:label="@string/title_app"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.tindergathering.ui.edit_profile.EditProfileFragment"
        android:label="@string/title_app" />
    <fragment
        android:id="@+id/navigation_swipe"
        android:name="com.example.tindergathering.ui.swipe.SwipeFragment"
        android:label="@string/title_app"
        tools:layout="@layout/fragment_swipe" />
</navigation>